  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message +"error" %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= render 'users/sidemenu', user: current_user, book: @book %>

<h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>