  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message +"error" %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
  <%= render 'users/sidebar', user: current_user, book: @book %>
    <div class="col-lg-8">
    <h1>Books</h1>
      <table class="table table-striped" >
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>