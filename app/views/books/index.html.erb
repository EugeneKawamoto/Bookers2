  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
  <%= render 'users/sidebar', user: current_user, book: @book %>
    <div class="col-xs-9">
    <h2>Books</h2>
      <table class="table table-hover table-inverse" >
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "profile-img", size: "40x40" %></td>
                <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <%# favorite %>
              <% if current_user.favorited_by?(book.id) %>
                <td>
                  <%= link_to destroy_favorite_path(book), method: :DELETE do %>
                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                  <%= book.favorites.count %>
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to create_favorite_path(book), method: :POST do %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                  <%= book.favorites.count %>
                  <% end %>
                </td>
              <% end %>
              <%# end_favorite %>
              <td class="comment-count">コメント数：<%= book.post_comments.count %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>