<div class="container">
  <div class="row">
    <%= render 'users/sidebar', user: @book_show.user, book: @book %>
    <div class="col-lg-8">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <tr>
          <td><%= @book_show.title %></td>
          <td><%= @book_show.body %><td>
          <td><%= link_to 'Edit', edit_book_path(@book_show.id) %></td>
          <td><%= link_to 'Destroy', book_path(@book_show.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>