<h1>User Info</h1>
<table>
  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
  <tr>
    <th>name</th>
    <td><%= current_user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= current_user.introduction %></td>
  </tr>
  <tr>
    <td><%= link_to "editbutton", edit_user_path(@user.id) %></td>
  </tr>
</table>
<h1>New Book</h1>
<%= form_for @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Opinion</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h1>Books index</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>

