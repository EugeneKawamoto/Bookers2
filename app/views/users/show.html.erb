

<%= render 'sidemenu',user: @user, book: @book %>

<h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</>
      <th>Opinion</th>
    </tr>
    <% @user.books.each do |book| %>
      <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>

<%= link_to "log out", destroy_user_session_path, method: :delete %>