<div class="container">
  <div class="row">
    <%= render 'sidebar',user: @user, book: @book %>
    <div class="col-xs-9">
      <h1>Books</h1>
        <table class="table table-striped">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @user.books.each do |book| %>
            <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>