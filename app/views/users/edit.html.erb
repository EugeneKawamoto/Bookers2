<div class="container">
  <div class="row">
    <h2>User info</h2>
    <div class="col-xs-3">
      <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message +"error" %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @user do |f| %>
        <div class="field">
          <div class="field_with_errors">
            <label for="user_name">Name</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
        <div class="field">
          <div class="field_with_errors">
            <label for="user_image">Image</label>
          </div>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form"  %>
        </div>
        <div class="field">
          <label for="user_introduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, class:"form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Update User", class:"btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>