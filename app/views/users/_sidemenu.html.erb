
  <div class="col-lg-4" style="background-color: white;">
    <h1>User Info</h1>
    <table class="table table-striped">
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
      <tr>
        <td><%= link_to "editbutton", edit_user_path(user.id) %></td>
      </tr>
    </table>
    <h1>New Book</h1>
    <%= form_for book do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>