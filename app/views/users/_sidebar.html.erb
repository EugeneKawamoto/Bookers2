
  <div class="col-xs-3" style="background-color: white;">
    <h2>User info</h2>
    <table class="table table-striped">
      <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </table>
      <div class="row">
        <% if user_signed_in? && current_user.id == user %>
          <%= link_to "", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        <% else %>
          <%= link_to "", user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        <% end %>
      </div>
    <h2>New book</h2>
    <%= form_for book do |f| %>
      <div class="field row">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field row">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions row">
        <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
      </div>
    <% end %>
  </div>