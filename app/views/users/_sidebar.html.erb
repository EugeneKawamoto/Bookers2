
  <div class="col-xs-3" style="background-color: white;">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
    <table class="table">
      <tr>
        <th>name</th>
        <td><strong><%= user.name %></strong></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><strong><%= user.introduction %></strong></td>
      </tr>
    </table>
    <div class="row">
      <%= link_to "", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>
    <h2>New book</h2>
    <%= form_for book do |f| %>
      <div class="field row">
        <label for="book_title">Title</label><br/>
        <%= f.text_field :title, class:"col-xs-12"%>
      </div>
      <div class="field row">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, class:"col-xs-12" %>
      </div>
      <div class="actions row">
        <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
      </div>
    <% end %>
  </div>